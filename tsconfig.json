{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es5",
            "es2015"
        ],
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules/"
    ],
    "compileOnSave": false
}
